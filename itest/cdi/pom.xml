<?xml version='1.0' encoding='UTF-8' ?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.ops4j.pax</groupId>
        <artifactId>exam</artifactId>
        <version>3.0.2-SNAPSHOT</version>
        <relativePath>../../pom</relativePath>
    </parent>

    <groupId>org.ops4j.pax.exam.itest</groupId>
    <artifactId>exam-itest-cdi</artifactId>
    <packaging>pom</packaging>

    <name>OPS4J Pax Exam Integration Tests for CDI</name>

    <profiles>

        <profile>
            <id>matrix</id>
            <modules>
                <module>src/it/regression-cdi-invalid</module>
                <module>src/it/regression-deltaspike</module>
                <module>src/it/regression-sample1</module>
                <module>src/it/regression-sample3-testng</module>
            </modules>
        </profile>

        <profile>
            <id>invoker</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <version>1.5</version>
                        <configuration>
                            <streamLogs>true</streamLogs>
                        </configuration>
                        <executions>
                            <execution>
                                <id>candi</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>candi</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/candi</cloneProjectsTo>
                                    <!-- Resin does not fire a BeforeBeanDiscoveryEvent, 
                                        which crashes DeltaSpike -->
                                    <invokerTest>regression-sample3-testng</invokerTest>
                                </configuration>
                            </execution>
                            <execution>
                                <id>openwebbeans</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>openwebbeans</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/openwebbeans</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>weld</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>weld</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/weld</cloneProjectsTo>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <forkMode>once</forkMode>
                            <classpathDependencyScopeExclude>provided</classpathDependencyScopeExclude>
                            <argLine>-XX:MaxPermSize=256M</argLine>
                            <systemProperties>
                                <pax.exam.container>${pax.exam.container}</pax.exam.container>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>


        </profile>

        <profile>
            <id>candi</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <pax.exam.container>candi</pax.exam.container>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.ops4j.pax.exam</groupId>
                    <artifactId>pax-exam-container-candi</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>openwebbeans</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <pax.exam.container>openwebbeans</pax.exam.container>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.ops4j.pax.exam</groupId>
                    <artifactId>pax-exam-container-openwebbeans</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.slf4j</groupId>
                    <artifactId>jul-to-slf4j</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>weld</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <pax.exam.container>weld</pax.exam.container>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.ops4j.pax.exam</groupId>
                    <artifactId>pax-exam-container-weld</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>

    </profiles>


</project>
