            </modules>
        </profile>

        <profile>
            <id>invoker</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <version>1.5</version>
                        <configuration>
                            <streamLogs>true</streamLogs>
                        </configuration>
                        <executions>
                            <execution>
                                <id>glassfish</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>glassfish</profile>
                                        <profile>equinox</profile>
                                        <profile>glassfish3</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/glassfish</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>glassfish-embedded</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>glassfish-embedded</profile>
                                        <profile>glassfish3</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/glassfish-embedded</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>glassfish4-embedded</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>glassfish4-embedded</profile>
                                        <profile>glassfish4</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/glassfish4-embedded</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>jboss</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>jboss</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/jboss</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>jboss72</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>jboss72</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/jboss72</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>wildfly80</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>wildfly80</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/wildfly80</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>resin</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>resin</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/resin</cloneProjectsTo>
                                </configuration>
                            </execution>
                            <execution>
                                <id>tomee</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <profiles>
                                        <profile>tomee</profile>
                                    </profiles>
                                    <cloneProjectsTo>${project.build.directory}/tomee</cloneProjectsTo>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

